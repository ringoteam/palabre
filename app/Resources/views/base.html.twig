<!DOCTYPE html>
<html>
  <head>
    <title>Palabre</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('/public/css/bootstrap.min.css') }}" type="text/css" media="all" />
        <link rel="stylesheet" href="{{ asset('/public/css/bootstrap-responsive.css') }}" rel="stylesheet">    
    {% endblock %}
  </head>
 
    <body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
          <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </a>
            <a class="brand" href="{{ path('palabre_home') }}">Palabre</a>
            {% block nav %}
            {% endblock %}
           </div>
        </div>
    </div> 
    <div class="container-fluid">
        <div class="row">
            {% block message %}
                {% include 'PalabreAppBundle:Main:message.html.twig' %}
            {% endblock %}
            <div class="span12">
                {% block main %}

                {% endblock%}   
            </div>
            {% block widget %}
            {% endblock%}   
                
        </div>
    </div>
{% block javascript %}
    <script src="http://code.jquery.com/jquery-latest.js"></script>
    <script src="{{ asset('/public/js/bootstrap.min.js ') }}"></script>
{% endblock %}
  </body>
</html>